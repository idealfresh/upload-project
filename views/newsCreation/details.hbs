<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <div class="row">

                    <img id="fullNewsParagraf" src="{{imagesFromNewsPath}}" width="250" alt="Article Image" align="left">

                    <div style="position: relative">
                        <p id="">
                        {{content}}
                        </p>
                    </div>
                </div>
                <small class="author">
                    {{author.fullName}}
                </small>

                <div>
                    <div class="pull-right">

                        {{#if user}}

                            <a class="btn btn-success btn-xs" href="/newsCreation/edit/{{id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/newsCreation/delete/{{id}}">Delete &raquo;</a>

                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </div>
            </article>


