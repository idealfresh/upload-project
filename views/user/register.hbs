<head>
    <title>reCAPTCHA demo: Simple page</title>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<div id="blog"><div class="container">
<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/user/register">
            <fieldset>
                <legend>Регистрация</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="inputEmail">Имейл адрес</label>
                    <div class="col-sm-4 ">
                        <input type="email" pattern="\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*" class="form-control" id="inputEmail" placeholder="Имейл адрес" name="email" required value={{email}}  >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="inputFullName">Име</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="inputFullName" placeholder="Име" required name="fullName" value={{fullName}}>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="inputPassword">Парола</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Парола" required name="password">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Потвърдете паролата</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Потвърдете паролата" required name="repeatedPassword">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <div class="g-recaptcha" data-sitekey="6Ld-rB0UAAAAANyXZKFiGbBc1J7NM_NQg4Y93xeF"></div>
                        <br>
                        <button type="submit" class="btn btn-primary">Изпрати</button>
                        <button type="reset" class="btn btn-default">Откажи</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
</div>
</div>